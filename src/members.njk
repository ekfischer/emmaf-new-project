{% extends '_templates/base.njk' %}

{% block page_title %}Members{% endblock %}

{% block page_description %}A list of bios and descriptions of each member{% endblock %}

{% block content %}
<article class="container">
  <h1>Members</h1>
  <p>Intro text here.</p>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4">
      {% for member in queen.members %}
        <div class="col mb-4">
          <div class="card" style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="img/members/{{ member.image }}" alt="" class="img-fluid rounded-start">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="{{ relative_path }}members/{{ member.name }}.html">{{ member.name }}</a>
                  </h5>
                  <p class="card-text">{{ member.instruments }}</p>
                  <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
  </div>
</article>
{% endblock %}
